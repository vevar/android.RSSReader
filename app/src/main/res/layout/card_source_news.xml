<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/m_margin"
    app:cardCornerRadius="@dimen/m_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/m_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_source"
            android:layout_width="@dimen/width_image_source_item"
            android:layout_height="@dimen/height_image_source_item"
            android:layout_margin="@dimen/m_margin"
            android:contentDescription="@string/source" />

        <TextView
            android:id="@+id/text_view_name_source"
            android:layout_width="@dimen/width_source_line_item"
            android:layout_height="match_parent" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_delete_source"
            android:layout_width="@dimen/width_button_delete_line_item"
            android:layout_height="@dimen/height_button_delete_line_item"
            android:layout_margin="@dimen/m_margin"
            android:text="X" />

    </LinearLayout>

</android.support.v7.widget.CardView>
